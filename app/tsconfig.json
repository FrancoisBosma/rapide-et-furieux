{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@ROOT/*": ["./*"],
      "@SRC/*": ["src/*"],
      "@GLOBAL/*": ["src/global/*"],
      "@FEATURES/*": ["src/features/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2016",
    "types": ["cypress", "vite/client", "vite-plugin-pages/client", "vite-plugin-vue-layouts/client"]
  },
  "exclude": ["dist", "node_modules"]
}
